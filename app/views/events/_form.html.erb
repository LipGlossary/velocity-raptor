<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :scheduled, "Schedule?" %>
    <%= f.check_box :scheduled? %>
  </div>
  <div class="field">
    <%= f.label :scheduled_time %>
    <%= select_datetime event.scheduled_time, {
      add_month_numbers: true,
      include_blank: true,
      minute_step: 15,
      prefix: :"event[scheduled_time]",
      prompt: true,
    } %>
  </div>

  <div class="field">
    <%= f.label :period %>
    <%= f.number_field :period %>
  </div>

  <div class="field">
    <%= f.label :duration %>
    <%= f.number_field :duration %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
